.first{
  width: 100%;
  height: 100%;
}

.header {
  margin: 90rpx 0 90rpx 50rpx;
  border-bottom: 1px solid #ccc;
  text-align: center;
  width: 650rpx;
  height: 300rpx;
  line-height: 450rpx;
}

.header image {
  width: 200rpx;
  height: 200rpx;
}

.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}

.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}

.header-new{
  position: relative;
  height: 160rpx;
  line-height: 100rpx;
  padding:30rpx 30rpx 30rpx 150rpx;
  box-sizing: border-box;
  background: #AB956D;
  font-size: 28rpx;
  color: #fff;
}
.header-new .thumb{
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.header-new .about{
  float: right;
}